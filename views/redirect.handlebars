<!doctype html>
<html>
  <head>
    <title>{{short.title}}</title>
    <meta name="description" content="{{{short.description}}}"/>
    <meta property="og:description" content="{{{short.og_description}}}"/>
    <meta property="og:image" content="{{short.og_image}}"/>
    <meta property="og:url" content="{{short.url}}"/>
  </head>

  <body>
    <script>
      (function(i, s, o, g, r, a, m) {
        i['GoogleAnalyticsObject'] = r;
        i[r] = i[r] || function() {
            (i[r].q = i[r].q || []).push(arguments)
        }, i[r].l = 1 * new Date();
        a = s.createElement(o),
        m = s.getElementsByTagName(o)[0];
        a.async = 1;
        a.src = g;
        m.parentNode.insertBefore(a, m)
      })(window, document, 'script', '//www.google-analytics.com/analytics.js', 'ga');

      ga('create', 'UA-69122586-2', 'auto');
      ga('send', 'pageview');
      ga('send', 'event', {
        eventCategory: 'Redirect',
        eventAction: 'automattic',
        eventLabel: '{{{short.url}}}'
      });

      (function() {
        window.location.replace("{{{short.url}}}");
      })();
    </script>
  </body>
</html>
