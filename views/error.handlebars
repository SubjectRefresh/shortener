<div style='display: table; width:100%; height: 80%;'>
  <div style='text-align:center; display: table-cell; vertical-align: middle;'>
    <h1>Aww snap... {{error}}</h1>
    <p>It looks like something went wrong. {{message}}</p>
    <p>Please return to the <a href='/'>homepage</a></p>
  </div>
</div>

{{#if showAds}}
  <script async src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
  <!-- Subr.pw -->
  <ins class="adsbygoogle"
     data-ad-client="ca-pub-3884627036744525"
     data-ad-slot="2954906335"
     data-ad-format="auto"
     data-full-width-responsive="true"></ins>
  <script>
  (adsbygoogle = window.adsbygoogle || []).push({});
  </script>
{{/if}}

<script>
  var obj = {
    event_category: 'Failure',
    event_label: '{{message}}'
  }

  {{#if short}}
  obj.short = '{{short}}';
  {{/if}}

  gtag('event', 'redirect', obj);
</script>
